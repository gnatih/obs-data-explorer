<div class="country-nav-select-outer">
<h4>Country:&nbsp;&nbsp;
<select class="country-nav-select">
<option value="">Select a country...</option>
{{#each countries}}
<option value="{{alpha2}}">{{name}}</option>
{{/each}}
</select></h4>
</div>
<div id="country-profile">
{{#if empty}}
  <h2>Select a country...</h2>
{{else}}
  {{#if main_website_url}}
    <a class="main-website-link" href="{{main_website_url}}">View {{#with data}}{{name}}{{/with}} on Main Site &raquo;</a>
  {{/if}}
  <h2>Country profile: {{#with data}}{{name}}{{/with}} ({{alpha2}})</h2>
  <table class="percentages">
  </table>
  <div id="profile-mode">
    <div class="pull-right scores">
      <div class="year-box year-2006">
        <span class="top">2006</span><span class="bottom">{{score_2006}}</span>
      </div>
      <div class="year-box year-2008">
        <span class="top">2008</span><span class="bottom">{{score_2008}}</span>
      </div>
      <div class="year-box year-2010">
        <span class="top">2010</span><span class="bottom">{{score_2010}}</span>
      </div>
      <div class="year-box year-2012">
        <span class="top">2012</span><span class="bottom">{{score_2012}}</span>
      </div>
      <div class="year-box year-2014">
        <span class="top">2014</span><span class="bottom">{{score_2014}}</span>
      </div>
    </div>
    Select mode:
    <div class="profile-toggle pull-left">
        <span class="pull-left text">Mode:</span>
        <div class="pull-left" id="profile-toggle-button">
            <input type="checkbox" checked="checked">
        </div>
    </div>

  </div>
  <div style="position: relative;">
    <div class="details"></div>
    <div class="question-box">
    </div>
  </div>
  <div class="clearfix"></div>
{{/if}}
</div>
