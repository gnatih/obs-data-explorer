    <div id="header-container" class="container">
      <div id="header">
        <h1 id="logo1">
          <a href="#" title="Open Budget Index: Data Explorer"><img src="/images/data-explorer-logo.png" alt="Open Budget Index: Data Explorer"></a>
        </h1>
        <h1 id="logo2">
          <a href="http://internationalbudget.org/" title="International Budget Partnership"><img src="/images/ibp-logo-inverted.png" class="printLogo" alt="International Budget Project | Open Budgets. Transform Lives."></a>
        </h1>
      </div>
    </div>
    <div id="main-nav">
      <div class="container">
        <ul>
          <li><a href="/#home">Home</a></li>
          <li><a href="/#map">Map</a></li>
          <li><a href="/#timeline">Timeline</a></li>
          <li><a href="/#rankings">Rankings</a></li>
          <li><a href="/#profile">Country<br />Datasheet</a></li>
          <li>
            <div class="dropdown">
              <a href="/availability">Document Availability</a>
              <div class="dropdown-content">
                <a href="/#availability-historical">Historical Results</a>
              </div>
            </div>
          <li><a href="/#participation">Public<br />Participation</a></li>
          <li><a href="/#download">Download<br />Data</a></li>
          <li class="pull-right"><a href="http://internationalbudget.org/opening-budgets/open-budget-initiative/open-budget-survey/">IBP Website &raquo;</a></li>
        </ul>
      </div>
    </div>
    <div class="container site-main">
      <hr class="top" />
      <div id="content">
        <div id="report-generator">
        </div>
        <div id="explorer">
          <div class="country-nav-select-outer">
            <h3>Country:&nbsp;&nbsp;
            <select class="country-nav-select" onchange="location = '{{baseUrl}}' + this.options[this.selectedIndex].value;">
            <option value="">Select a country...</option>
            {{#each countries}}
            <option value="{{slug}}" {{#is slug ../data.slug}}selected="selected"{{/is}}>{{name}}</option>
            {{/each}}
            </select> <button class="btn btn-default" id="print-answered" onclick="javascript:window.print();" style="float: right">Print/PDF</button></h3>
          </div>
          <div id="country-profile">
            <h3 id="country-header">Country Questionnaire: {{data.name}}</h3>

            {{#each questions}}
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4><strong>{{qid}}:</strong> {{{question}}}</h4>
              </div>
              <div class="panel-body">
                {{#if scoreOptions}}
                <ul class="list-unstyled">
                {{#each scoreOptions }}
                  <li><strong>{{ label_option }}</strong> {{#if score includeZero=true}}({{ score }}){{/if}} {{ criteria }}</li>
                {{/each}}
                </ul>
                {{/if}}

                {{#each ../data.answers}}
                  {{#is qid ../qid}}
                    <div class="well well-sm">
                      <ul class="list-unstyled">
                        {{#if author.answerLabel}}
                          <li><strong>Answer:</strong> {{author.answerLabel}} {{#if author.score}}({{author.score}}){{/if}}<br><br></li>
                        {{/if}}
                        {{#if author.sourceOptions}}
                          <li><strong>Source options:</strong> {{author.sourceOptions}}</li>
                        {{/if}}
                        {{#if author.sourceDescription}}
                          <li><strong>Sources:</strong> {{author.sourceDescription}}</li>
                        {{/if}}
                        {{#if author.comments}}
                          <li><strong>Comments:</strong> {{author.comments}}</li>
                        {{/if}}
                      </ul>
                    </div>
                    {{#if reviews}}
                      {{#each reviews}}
                        <ul class="list-unstyled">
                          {{#if reviewer}}
                            <li><strong>{{reviewer}}</strong></li>
                          {{/if}}
                          {{#if opinion}}
                            <li><strong>Opinion:</strong> {{opinion}}</li>
                          {{/if}}
                          {{#if suggestedScore}}
                            <li><strong>Suggested answer:</strong> {{suggestedScore}}</li>
                          {{/if}}
                          {{#if comments}}
                            <li><strong>Comments:</strong> {{comments}}</li>
                          {{/if}}
                          {{#if peerReviewDiscussions}}
                            <li><strong>Peer review Discussions:</strong> {{peerReviewDiscussions}}</li>
                          {{/if}}
                        </ul>
                      {{/each}}
                    {{/if}}
                    {{#if author.researcherResponse }}
                      <ul class="list-unstyled">
                        <li><strong>Researcher response:</strong> {{author.researcherResponse}}</li>
                      </ul>
                    {{/if}}
                    {{#if author.ibpComment}}
                      <ul class="list-unstyled">
                        <li><strong>IBP comment:</strong> {{author.ibpComment}}</li>
                      </ul>
                    {{/if}}
                  {{/is}}
                {{/each}}
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        <div class="clearfix">
        </div>
      </div>
    </div>
    <div id="footer-container">
      <div id="footer">
        <div id="footer-first">
          <h4 class="widget-title">Join Our International Network</h4>
          <div class="textwidget"><p>Connect with organizations working to improve government budget systems, policies and outcomes!</p>
          <p><a class="footer-button" href="http://internationalbudget.org/budget-work-by-country/join-our-network/">Join</a>
          <a class="footer-button" href="http://internationalbudget.org/budget-work-by-country/findgroup/">Find Groups</a></p>
          </div>
        </div>
        <div id="footer-second">
          <img src="http://internationalbudget.org/wp-content/themes/ibp/images/worldmap_footer.png" alt="World Map">
        </div>
      </div>
