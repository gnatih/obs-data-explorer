    <div class="container site-main">
      <hr class="top" />
      <div id="content">
        <div id="report-generator">
        </div>
        <div id="explorer">
            <div class="country-nav-select-outer">
                <h3>Country:&nbsp;&nbsp;
                <select class="country-nav-select" onchange="location = '{{baseUrl}}' + this.options[this.selectedIndex].value;">
                <option value="">Select a country...</option>
                {{#each countries}}
                <option value="{{slug}}" {{#is slug ../data.slug}}selected="selected"{{/is}}>{{name}}</option>
                {{/each}}
                </select></h3>
            </div>
            <div id="country-profile">
                <h3 id="country-header">Country Questionnaire: {{data.name}}</h3>
                <table class="table table-condensed" id="question-table-print-show">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Question</th>
                            <th class="space"></th>
                            <th>Answers</th>
                        </tr>
                    </thead>
                    {{#each questions}}
                        <tr class="question-row" data-question-number="{{qid}}">
                            <td class="number-print">{{qid}}</td>
                            <td class="question-print">
                                <p>{{question}}</p>
                                {{#if scoreOptions}}
                                <p>Criteria:</p>
                                <ul>
                                {{#each scoreOptions }}
                                    <li>{{ label_option }} {{#if score}}({{ score }}){{/if}} {{ criteria }}</li>
                                {{/each}}
                                </ul>
                                {{/if}}
                            </td>
                            <td class="space-print"></td>
                            <td>
                            {{#each ../data.answers}}
                                {{#is qid ../qid}}
                                    <p>Author:</p>
                                    <ul>
                                        {{#if author.answerLabel}}
                                            <li>Answer: {{author.answerLabel}} {{#if author.score}}({{author.score}}){{/if}}</li>
                                        {{/if}}
                                        {{#if author.sourceOptions}}
                                            <li>Source options: {{author.sourceOptions}}</li>
                                        {{/if}}
                                        {{#if author.sourceDescription}}
                                            <li>Source description: {{author.sourceDescription}}</li>
                                        {{/if}}
                                        {{#if author.comments}}
                                            <li>Comments: {{author.comments}}</li>
                                        {{/if}}
                                    </ul>
                                    {{#if reviews}}
                                        <p>Reviews:</p>
                                        {{#each reviews}}
                                            <ul>
                                                {{#if reviewer}}
                                                    <li>Reviewer: {{reviewer}}</li>
                                                {{/if}}
                                                {{#if opinion}}
                                                    <li>Opinion: {{opinion}}</li>
                                                {{/if}}
                                                {{#if suggestedScore}}
                                                    <li>Suggested answer: {{suggestedScore}}</li>
                                                {{/if}}
                                                {{#if comments}}
                                                    <li>Comments: {{comments}}</li>
                                                {{/if}}
                                                {{#if peerReviewDiscussions}}
                                                    <li>Peer review Discussions: {{peerReviewDiscussions}}</li>
                                                {{/if}}
                                            </ul>
                                        {{/each}}
                                    {{/if}}
                                {{/is}}
                            {{/each}}
                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </div>
        <div class="clearfix">
        </div>
      </div>
